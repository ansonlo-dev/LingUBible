{
    "projectId": "lingubible",
    "projectName": "LingUBible",
    "settings": {
        "services": {
            "account": true,
            "avatars": true,
            "databases": true,
            "locale": true,
            "health": true,
            "storage": true,
            "teams": true,
            "users": true,
            "sites": true,
            "functions": true,
            "graphql": true,
            "messaging": true
        },
        "auth": {
            "methods": {
                "jwt": true,
                "phone": true,
                "invites": true,
                "anonymous": true,
                "email-otp": true,
                "magic-url": true,
                "email-password": true
            },
            "security": {
                "duration": 31536000,
                "limit": 0,
                "sessionsLimit": 10,
                "passwordHistory": 0,
                "passwordDictionary": false,
                "personalDataCheck": false,
                "sessionAlerts": false,
                "mockNumbers": []
            }
        }
    },
    "functions": [
        {
            "$id": "send-verification",
            "execute": [
                "any"
            ],
            "name": "Send Verification Email",
            "enabled": true,
            "logging": true,
            "runtime": "bun-1.1",
            "scopes": [
                "databases.read",
                "databases.write"
            ],
            "events": [],
            "schedule": "",
            "timeout": 15,
            "entrypoint": "src/main.js",
            "commands": "bun install",
            "specification": "s-0.5vcpu-512mb",
            "path": "functions/send-verification-email"
        },
        {
            "$id": "cleanup-expired-codes",
            "execute": [
                "any"
            ],
            "name": "Cleanup Expired Codes",
            "enabled": true,
            "logging": true,
            "runtime": "bun-1.1",
            "scopes": [
                "databases.read",
                "databases.write"
            ],
            "events": [],
            "schedule": "0 */6 * * *",
            "timeout": 30,
            "entrypoint": "src/main.js",
            "commands": "bun install",
            "specification": "s-0.5vcpu-512mb",
            "path": "functions/cleanup-expired-codes"
        },
        {
            "$id": "get-user-stats",
            "execute": [
                "any"
            ],
            "name": "Get User Statistics",
            "enabled": true,
            "logging": true,
            "runtime": "bun-1.1",
            "scopes": [
                "users.read",
                "databases.read",
                "databases.write"
            ],
            "events": [],
            "schedule": "",
            "timeout": 15,
            "entrypoint": "src/main.js",
            "commands": "bun install",
            "specification": "s-0.5vcpu-512mb",
            "path": "functions/get-user-stats"
        }
    ],
    "databases": [
        {
            "$id": "student_comments",
            "name": "student_comments",
            "enabled": true
        },
        {
            "$id": "verification_system",
            "name": "verification_system",
            "enabled": true,
            "backup": {
                "enabled": true,
                "frequency": "daily",
                "retention": 7
            }
        },
        {
            "databaseId": "user-stats-db",
            "name": "User Statistics Database",
            "collections": [
                {
                    "collectionId": "user-sessions",
                    "name": "User Sessions",
                    "permissions": [
                        "read(\"any\")",
                        "create(\"any\")",
                        "update(\"any\")",
                        "delete(\"any\")"
                    ],
                    "documentSecurity": true,
                    "enabled": true,
                    "attributes": [
                        {
                            "key": "userId",
                            "type": "string",
                            "status": "available",
                            "error": "",
                            "required": false,
                            "array": false,
                            "size": 255,
                            "default": null
                        },
                        {
                            "key": "sessionId",
                            "type": "string",
                            "status": "available",
                            "error": "",
                            "required": true,
                            "array": false,
                            "size": 255,
                            "default": null
                        },
                        {
                            "key": "loginTime",
                            "type": "datetime",
                            "status": "available",
                            "error": "",
                            "required": true,
                            "array": false,
                            "default": null,
                            "format": "datetime"
                        },
                        {
                            "key": "lastPing",
                            "type": "datetime",
                            "status": "available",
                            "error": "",
                            "required": true,
                            "array": false,
                            "default": null,
                            "format": "datetime"
                        },
                        {
                            "key": "deviceInfo",
                            "type": "string",
                            "status": "available",
                            "error": "",
                            "required": false,
                            "array": false,
                            "size": 1000,
                            "default": null
                        },
                        {
                            "key": "ipAddress",
                            "type": "string",
                            "status": "available",
                            "error": "",
                            "required": false,
                            "array": false,
                            "size": 45,
                            "default": null
                        },
                        {
                            "key": "isVisitor",
                            "type": "boolean",
                            "status": "available",
                            "error": "",
                            "required": true,
                            "array": false,
                            "default": false
                        }
                    ],
                    "indexes": [
                        {
                            "key": "userId_index",
                            "type": "key",
                            "status": "available",
                            "error": "",
                            "attributes": [
                                "userId"
                            ],
                            "orders": [
                                "ASC"
                            ]
                        },
                        {
                            "key": "sessionId_index",
                            "type": "key",
                            "status": "available",
                            "error": "",
                            "attributes": [
                                "sessionId"
                            ],
                            "orders": [
                                "ASC"
                            ]
                        },
                        {
                            "key": "lastPing_index",
                            "type": "key",
                            "status": "available",
                            "error": "",
                            "attributes": [
                                "lastPing"
                            ],
                            "orders": [
                                "DESC"
                            ]
                        }
                    ]
                },
                {
                    "collectionId": "user-stats",
                    "name": "User Statistics",
                    "permissions": [
                        "read(\"users\")",
                        "create(\"users\")",
                        "update(\"users\")",
                        "delete(\"users\")"
                    ],
                    "documentSecurity": true,
                    "enabled": true,
                    "attributes": [
                        {
                            "key": "totalUsers",
                            "type": "integer",
                            "status": "available",
                            "error": "",
                            "required": true,
                            "array": false,
                            "min": 0,
                            "max": 2147483647,
                            "default": 0
                        },
                        {
                            "key": "todayLogins",
                            "type": "integer",
                            "status": "available",
                            "error": "",
                            "required": true,
                            "array": false,
                            "min": 0,
                            "max": 2147483647,
                            "default": 0
                        },
                        {
                            "key": "thisMonthLogins",
                            "type": "integer",
                            "status": "available",
                            "error": "",
                            "required": true,
                            "array": false,
                            "min": 0,
                            "max": 2147483647,
                            "default": 0
                        },
                        {
                            "key": "lastUpdated",
                            "type": "datetime",
                            "status": "available",
                            "error": "",
                            "required": true,
                            "array": false,
                            "default": null,
                            "format": "datetime"
                        }
                    ],
                    "indexes": []
                },
                {
                    "collectionId": "logged-users",
                    "name": "Logged Users",
                    "permissions": [
                        "read(\"users\")",
                        "create(\"users\")",
                        "update(\"users\")",
                        "delete(\"users\")"
                    ],
                    "documentSecurity": true,
                    "enabled": true,
                    "attributes": [
                        {
                            "key": "userId",
                            "type": "string",
                            "status": "available",
                            "error": "",
                            "required": true,
                            "array": false,
                            "size": 255,
                            "default": null
                        },
                        {
                            "key": "firstLogin",
                            "type": "datetime",
                            "status": "available",
                            "error": "",
                            "required": true,
                            "array": false,
                            "default": null,
                            "format": "datetime"
                        }
                    ],
                    "indexes": [
                        {
                            "key": "userId_unique",
                            "type": "unique",
                            "status": "available",
                            "error": "",
                            "attributes": [
                                "userId"
                            ],
                            "orders": [
                                "ASC"
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "collections": [
        {
            "$id": "verification_codes",
            "databaseId": "verification_system",
            "name": "verification_codes",
            "enabled": true,
            "documentSecurity": true,
            "$permissions": [
                "create(\"any\")",
                "read(\"users\")",
                "update(\"users\")",
                "delete(\"users\")"
            ],
            "attributes": [
                {
                    "key": "email",
                    "type": "string",
                    "status": "available",
                    "required": true,
                    "array": false,
                    "size": 255
                },
                {
                    "key": "code",
                    "type": "string",
                    "status": "available",
                    "required": true,
                    "array": false,
                    "size": 6
                },
                {
                    "key": "expiresAt",
                    "type": "datetime",
                    "status": "available",
                    "required": true,
                    "array": false
                },
                {
                    "key": "attempts",
                    "type": "integer",
                    "status": "available",
                    "required": false,
                    "array": false,
                    "min": 0,
                    "max": 10,
                    "default": 0
                },
                {
                    "key": "isVerified",
                    "type": "boolean",
                    "status": "available",
                    "required": false,
                    "array": false,
                    "default": false
                },
                {
                    "key": "ipAddress",
                    "type": "string",
                    "status": "available",
                    "required": false,
                    "array": false,
                    "size": 45,
                    "default": null
                },
                {
                    "key": "userAgent",
                    "type": "string",
                    "status": "available",
                    "required": false,
                    "array": false,
                    "size": 500,
                    "default": null
                }
            ],
            "indexes": [
                {
                    "key": "email_index",
                    "type": "key",
                    "status": "available",
                    "attributes": [
                        "email"
                    ],
                    "orders": [
                        "ASC"
                    ]
                },
                {
                    "key": "expires_index",
                    "type": "key",
                    "status": "available",
                    "attributes": [
                        "expiresAt"
                    ],
                    "orders": [
                        "ASC"
                    ]
                }
            ]
        }
    ]
}